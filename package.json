  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alvivi/snabbdom-tsx/issues"
  },
  "homepage": "https://github.com/alvivi/snabbdom-tsx#readme",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.0",
    "ts-node": "^1.7.3",
    "tslint": "^3.15.1",
    "typescript": "^2.1.6"
  }
}